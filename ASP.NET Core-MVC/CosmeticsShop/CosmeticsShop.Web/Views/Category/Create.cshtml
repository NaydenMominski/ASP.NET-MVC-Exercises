@model CategoryFormViewModel

@{
    ViewData["Title"] = "Create Category";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a new Manifacturer.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Published"></label>
                <input asp-for="Published" type="radio" value="True" /> Yes
                <input asp-for="Published" type="radio" value="False" /> No
                <span asp-validation-for="Published" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
