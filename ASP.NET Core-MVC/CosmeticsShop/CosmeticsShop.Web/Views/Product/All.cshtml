@model ProductPageListingModel

@{
    ViewData["Title"] = "All Products";
}

<h2>
    @ViewData["Title"]
<a class="btn btn-primary" href="/product/create">Add Product</a>
</h2>

@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var NextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<ul class="pagination">
    <li class="page-item @previousDisabled">
        <a class="page-link @previousDisabled" href="/parts/all?page=@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage==i?"active":string.Empty)"><a class="page-link" href="/parts/all?page=@i">@i</a></li>
    }

    <li class="page-item @NextDisabled">
        <a class="page-link @NextDisabled" href="/parts/all?page=@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Picture
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Secial Price
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
        <tr>
            <td>
                <img src="@product.MaingImagePath" alt="Image" width="100px;" />
            </td>
            <td>
                @product.Name
            </td>
            <td>
                $@product.Price.ToString("F2")
            </td>
            <td>
                $@product.SpecialPrice?.ToString("F2")
            </td>

            <td>
                <a href="/product/edit/@product.Id" class="btn btn-warning">Edit</a>
                <a href="/product/delete/@product.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>

        }
    </tbody>
</table>


